[flake8]
exclude =
    # Never scan the git folder
    .git,
    # Settings files that do sketchy imports
    src/bocken/settings/dev.py,
    src/bocken/settings/production.py,
    src/bocken/settings/base.py,
    # Autogenerated files
    */migrations/*
    venv/*

    # Dont scan tailwind theme folder since it is autogenerated
    src/utn_tailwind_theme/*

ignore = D100, D104, D106, D107
